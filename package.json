{
  "name": "pet-collector-game",
  "version": "1.0.0",
  "description": "🐾 一個有趣的寵物收集遊戲 - 演示所有 Claude Code 指令",
  "main": "backend/server.js",
  "scripts": {
    "start": "node backend/server.js",
    "dev": "nodemon backend/server.js",
    "test": "jest --coverage",
    "test:watch": "jest --watch",
    "test:single": "jest --testNamePattern",
    "lint": "eslint . --ext .js,.json",
    "lint:fix": "eslint . --ext .js,.json --fix",
    "build": "npm run lint && npm test && echo '🎉 Build successful!'",
    "setup": "npm install && node scripts/setup-game.js",
    "reset-game": "node scripts/reset-game.js",
    "generate-pets": "node scripts/generate-pets.js"
  },
  "keywords": ["game", "pets", "collection", "claude-code", "demo"],
  "author": "Claude Code Pet Game",
  "license": "MIT",
  "dependencies": {
    "express": "^4.18.0",
    "cors": "^2.8.5",
    "uuid": "^9.0.0",
    "fs-extra": "^11.1.0"
  },
  "devDependencies": {
    "nodemon": "^3.0.0",
    "jest": "^29.0.0",
    "eslint": "^8.0.0",
    "supertest": "^6.3.0"
  }
}